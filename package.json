{
  "name": "HyperStaking-contracts",
  "scripts": {
    "test": "npx hardhat test",
    "coverage": "npx hardhat coverage --solcoverjs .solcover.ts",
    "prettier": "prettier --write --plugin=prettier-plugin-solidity 'contracts/**/*.sol'",
    "lint": "prettier --list-different --plugin=prettier-plugin-solidity 'contracts/**/*.sol' || npx eslint . --ext .js,.ts",
    "check": "solhint -c .solhint.json 'contracts/**/*.sol'",
    "prepare": "husky",
    "docgen": "npx hardhat docgen",
    "deploy-hyperstaking-holesky": "npx hardhat ignition deploy ignition/modules/HyperStaking.ts --network holesky",
    "deploy-lumia-diamond-holesky": "npx hardhat ignition deploy ignition/modules/LumiaDiamond.ts --parameters ignition/parameters.holesky.json --network holesky",
    "deploy-dinero-strategy-holesky": "npx hardhat ignition deploy ignition/modules/DineroStrategy.ts --parameters ignition/parameters.holesky.json --network holesky",
    "deploy-superform-strategy-holesky": "npx hardhat ignition deploy ignition/modules/SuperformStrategy.ts --parameters ignition/parameters.holesky.json --network holesky"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:orionprotocol/HyperStaking-contracts.git"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-foundry": "^1.1.2",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@types/mocha": "^10.0.7",
    "@types/node": "^22.5.4",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "ethers": "^6.13.2",
    "hardhat": "^2.24.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-switch-network": "^1.1.1",
    "husky": "^9.1.5",
    "prettier": "^3.3.3",
    "prettier-plugin-solidity": "^1.4.1",
    "solhint": "^5.1.0",
    "solidity-coverage": "^0.8.16",
    "solidity-docgen": "^0.6.0-beta.36",
    "typechain": "^8.3.2"
  }
}
